#include <iostream>

using namespace std;

int main() {
    int n;

    // Read the number of rows from the user
    cout << "Enter the number of rows: ";
    cin >> n;

    // Iterate over each row
    for (int i = 1; i <= n; ++i) {
        // Print '*' i times
        for (int j = 1; j <= i; ++j) {
            cout << "*";
        }
        cout << endl; // Move to the next line after each row
    }

    return 0;
}
