#include <iostream>

using namespace std;

int main() {
    int num;

    // Read an integer from the user
    cout << "Enter an integer: ";
    cin >> num;

    // Check if the integer is even or odd
    if (num % 2 == 0) {
        cout << num << " is even." << endl;
    } else {
        cout << num << " is odd." << endl;
    }

    return 0;
}
